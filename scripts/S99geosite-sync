#!/bin/sh
START=99
LOG_FILE="/opt/var/log/geosite-sync.log"
PID_FILE="/opt/var/run/geosite-sync.pid"

start() {
	/opt/scripts/geosite-sync.sh
}

stop() {
	if [ -f "$PID_FILE" ]; then
		pid="$(cat "$PID_FILE")"
		kill -0 "$pid" 2>/dev/null && kill "$pid"
		rm -f "$PID_FILE"
	fi
}

restart() {
	stop
	sleep 1
	start
}

logs() {
	tail -n 200 "$LOG_FILE" || echo "log not found: $LOG_FILE"
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	logs)
		logs
		;;
	*)
		echo "Usage: $0 {start|stop|restart|logs}"
		exit 1
		;;
esac
